<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/yellow" /> <!-- Border color -->
            <corners android:radius="50dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Inner Background -->
    <item
             android:background="@color/white"
        android:bottom="15dp"
        android:left="15dp"
        android:right="15dp"
        android:top="15dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Background color -->
            <corners android:radius="30dp" /> <!-- Slightly smaller radius for inner background -->
        </shape>
    </item>

</layer-list>
